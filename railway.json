{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "python bot.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "variables": {
    "TELEGRAM_BOT_TOKEN": {
      "description": "Token du bot Telegram (@BotFather)",
      "required": true
    },
    "TELEGRAM_CHANNEL_ID": {
      "description": "ID du canal Telegram (@nom ou -100xxx)",
      "required": true
    },
    "TIMEZONE": {
      "description": "Fuseau horaire",
      "default": "Europe/Paris"
    },
    "DAILY_TIME": {
      "description": "Heure d'envoi (HH:MM)",
      "default": "07:00"
    },
    "MIN_CONFIDENCE": {
      "description": "Confiance minimale (0.0-1.0)",
      "default": "0.65"
    },
    "LOG_LEVEL": {
      "description": "Niveau de logs",
      "default": "INFO"
    }
  }
}